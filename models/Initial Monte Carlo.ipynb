    "    'Pos': '3B',\n",
    "    'PA': 78,\n",
    "    'H': 16,\n",
    "    '2B': 2,\n",
    "    '3B': 0,\n",
    "    'HR': 0,\n",
    "    'BB': 7,\n",
    "    'SO': 15,\n",
    "    'HBP': 2,\n",
    "    'SF': 0,\n",
    "    'SH': 0\n",
    "}\n",
    "\n",
    "# Derived stats\n",
    "berti_data['1B'] = berti_data['H'] - berti_data['2B'] - berti_data['3B'] - berti_data['HR']\n",
    "berti_data['SO%'] = berti_data['SO'] / berti_data['PA']\n",
    "berti_data['BB%'] = berti_data['BB'] / berti_data['PA']\n",
    "berti_data['HBP%'] = berti_data['HBP'] / berti_data['PA']\n",
    "berti_data['1B%'] = berti_data['1B'] / berti_data['PA']\n",
    "berti_data['2B%'] = berti_data['2B'] / berti_data['PA']\n",
    "berti_data['3B%'] = berti_data['3B'] / berti_data['PA']\n",
    "berti_data['HR%'] = berti_data['HR'] / berti_data['PA']\n",
    "berti_data['SF%'] = berti_data['SF'] / berti_data['PA']\n",
    "berti_data['SH%'] = berti_data['SH'] / berti_data['PA']\n",
    "\n",
    "# Convert and append to starters\n",
    "berti_row = pd.DataFrame([berti_data])\n",
    "starters = pd.concat([starters, berti_row], ignore_index=True)\n",
    "\n",
    "## Adding Carson Kelly\n",
    "kelly_data = {\n",
    "    'Name': 'Carson Kelly',\n",
    "    'Pos': 'C',\n",
    "    'PA': 105,\n",
    "    'H': 24,\n",
    "    '2B': 1,\n",
