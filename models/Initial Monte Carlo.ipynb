    "# Monte Carlo simulation for one lineup\n",
    "def monte_carlo(players, lineup, sims=250):\n",
    "    return np.mean([simulate_game(players, lineup) for _ in range(sims)])\n",
    "\n",
    "# Brute-force search for best lineup\n",
    "def find_best_lineup(players, sims=250):\n",
    "    best_lineup = None\n",
    "    best_runs = 0\n",
    "    all_perms = sample(list(permutations(range(9))), 5000)\n",
    "\n",
    "    print(\"⏳ Running simulations for all lineup permutations...\")\n",
    "\n",
    "    for i, perm in enumerate(all_perms):\n",
    "        avg_runs = monte_carlo(players, perm, sims=sims)\n",
    "        if avg_runs > best_runs:\n",
    "            best_runs = avg_runs\n",
    "            best_lineup = perm\n",
    "        if i % 5000 == 0:\n",
    "            print(f\"Checked {i} permutations...\")\n",
    "\n",
    "    return best_lineup, best_runs\n",
    "\n",
    "best_lineup, best_avg = find_best_lineup(starters, sims=250)"
   ]
